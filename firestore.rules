rules_version = '3';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write only their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Allow read/write to user's transactions
      match /transactions/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Allow read/write to user's debts
      match /debts/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Allow read/write to user's budgets
      match /budgets/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // Allow read/write to user's categories
      match /categories/{document=**} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Deny access to anything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
